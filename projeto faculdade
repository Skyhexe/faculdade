<body>
  <header>Minhas Listas</header>

  <div class="container" id="listContainer"></div>

  <button class="floating-button" onclick="addNewList()">+</button>

  <script>
    function saveLists() {
      const data = Array.from(document.querySelectorAll('.card')).map(card => {
        return {
          title: card.querySelector('.card-title').innerText,
          items: Array.from(card.querySelectorAll('.item')).map(item => ({
            text: item.querySelector('input[type="text"]').value,
            checked: item.querySelector('input[type="checkbox"]').checked
          }))
        }
      });
      localStorage.setItem('shoppingLists', JSON.stringify(data));
    }

    function loadLists() {
      const data = JSON.parse(localStorage.getItem('shoppingLists') || '[]');
      data.forEach(list => {
        createListCard(list.title, list.items);
      });
    }

    function createListCard(title = 'Nova Lista', items = []) {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <div class="card-header">
          <div class="card-title" contenteditable="true">${title}</div>
          <div class="card-menu" onclick="toggleMenu(this)">&#x22EE;
            <div class="menu-options">
              <button onclick="addItem(this)">‚ûï Adicionar item</button>
              <button onclick="editTitle(this)">‚úèÔ∏è Editar t√≠tulo</button>
              <button onclick="deleteList(this)">üóëÔ∏è Excluir lista</button>
            </div>
          </div>
        </div>
        <div class="separator"></div>
        <div class="items"></div>
      `;
      const itemsDiv = card.querySelector('.items');
      if (items.length === 0) {
        items.push({ text: 'Item 1', checked: false }, { text: 'Item 2', checked: false });
      }
      items.forEach(({ text, checked }) => {
        const item = document.createElement('div');
        item.className = 'item' + (checked ? ' checked' : '');
        item.innerHTML = `
          <input type="checkbox" ${checked ? 'checked' : ''} onchange="toggleCheck(this)" />
          <input type="text" value="${text}" />
        `;
        itemsDiv.appendChild(item);
      });
      document.getElementById('listContainer').appendChild(card);
      saveLists();
    }

    function addNewList() {
      createListCard();
    }

    function toggleMenu(elem) {
      const menu = elem.querySelector('.menu-options');
      const isVisible = menu.style.display === 'flex';
      document.querySelectorAll('.menu-options').forEach(m => m.style.display = 'none');
      menu.style.display = isVisible ? 'none' : 'flex';
    }

    function addItem(button) {
      const itemsDiv = button.closest('.card').querySelector('.items');
      const item = document.createElement('div');
      item.className = 'item';
      item.innerHTML = `
        <input type="checkbox" onchange="toggleCheck(this)" />
        <input type="text" value="Novo item" />
      `;
      itemsDiv.appendChild(item);
      saveLists();
    }

    function editTitle(button) {
      const title = button.closest('.card').querySelector('.card-title');
      title.focus();
      title.addEventListener('blur', saveLists, { once: true });
    }

    function deleteList(button) {
      if (confirm("Tem certeza que deseja excluir esta lista?")) {
        const card = button.closest('.card');
        card.remove();
        saveLists();
      }
    }

    function toggleCheck(checkbox) {
      const item = checkbox.closest('.item');
      item.classList.toggle('checked', checkbox.checked);
      saveLists();
    }

    window.onload = loadLists;
  </script>
</body>
</html>
